  <div class="grid w-full max-w-screen-lg gap-6 mt-8 sm:grid-cols-2 sm:gap-y-8">
    <.testimonial
      :for={testimonial <- @testimonials}
      name={testimonial.name}
      text={testimonial.text}
      avatar_filename={testimonial.avatar_filename}
    />
  </div>
