<%!-- Products Section --%>
<div class="grid gap-16 px-4 py-8 bg-white cols-1">
  <.product
    :for={product <- @products}
    name={product.name}
    description={product.description}
    link={product.link}
    product_image_filename={product.product_image_filename}
  />
</div>

<%!-- Testimonials Section --%>
<div class="flex flex-col items-center justify-center p-6 bg-zinc-900">
  <div class="text-4xl font-extrabold text-white">
    <%= gettext("Testimonials") %>
  </div>
  <%!-- <div class="mt-4 text-sm text-center text-zinc-400">
